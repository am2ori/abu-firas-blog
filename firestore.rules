rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && request.auth.token.isAdmin == true;
    }

    // Posts:
    // - Read: Public if published, Admin can read all
    // - Write: Admin only
    match /posts/{postId} {
      allow read: if resource.data.published == true || isAdmin();
      allow write: if isAdmin();
    }

    // Categories & Tags:
    // - Read: Public
    // - Write: Admin only
    match /categories/{categoryId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /tags/{tagId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Redirects:
    // - Read: Public (needed for client-side or server-side lookups)
    // - Write: Admin only
    match /redirects/{redirectId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Users:
    // - Read/Write: Only own document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
